<% include ../partials/header %>
<h1 style="text-align:center;">Create a new campgrounds</h1>

    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="place" placeholder="place">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="10" step="1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campground</a>
        </div>
    </div>

<% include ../partials/footer %>